	</table>

	<script src="/lib/RockPaperScissors.js"></script>
	<script src="/lib/jquery-2.1.1.min.js"></script>
	<script>

		var player1 = new Player('player1');
		var player2 = new Player('player2');
		var game = new Game(player1, player2);
		this.player1.picks('rock');
		var player2Selection;
	
		$("img[data-pick='spock']").on("click", function() {
			$player2Selection = "spock";
			
		});

		$("img[data-pick='scissors']").on("click", function() {
			$player2Selection = "scissors";
			
		});

		this.player2.picks(player2Selection);
		// this.player2.picks("<p>" + player2Selection + "<p>");
		var message = this.game.winningMessage();

		var newItem = $(message);
		newItem.appendTo('.container');

